{
  "name": "@alshdavid/workspace",
  "private": true,
  "workspaces": [
    "./.github/scripts",
    "./packages/mach_npm_bin",
    "./packages/mach_npm",
    "./testing",
    "./examples/*"
  ],
  "nodemonConfig": {
    "delay": 250,
    "exec": "clear && just build && just integration-tests",
    "ext": "rs,ts,mts,cts,js,mjs,cjs,json",
    "ignore": [
      "**/node_modules/**",
      "**/.git/**",
      "**/target/**"
    ],
    "signal": "SIGTERM"
  },
  "devDependencies": {
    "@alshdavid/mach": "0.0.0-local",
    "@alshdavid/mach-os-arch": "0.0.0-local",
    "@shigen/polyfill-symbol-dispose": "*",
    "@types/node": ">=20",
    "nodemon": "*",
    "prettier": "*",
    "puppeteer-core": "*",
    "semver": "*",
    "tsx": "*",
    "typescript": "*"
  }
}
