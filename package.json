{
  "name": "@alshdavid/workspace",
  "private": true,
  "workspaces": [
    "./.github/scripts",
    "./packages/mach_npm_bin",
    "./packages/mach_npm",
    "./testing",
    "./examples/*"
  ],
  "nodemonConfig": {
    "ignore": ["**/node_modules/**", "**/.git/**", "**/target/**"],
    "ext": "rs,ts,js,json",
    "delay": 250,
    "signal" : "SIGTERM",
    "exec": "clear && just build && just integration-tests"
  },
  "devDependencies": {
    "nodemon": "*",
    "prettier": "*",
    "typescript": "5.x.x",
    "tsx": "*",
    "@alshdavid/mach": "0.0.0-local",
    "@alshdavid/mach-os-arch": "0.0.0-local",
    "@types/node": ">=22",
    "@shigen/polyfill-symbol-dispose": "*",
    "puppeteer-core": "*"
  }
}
