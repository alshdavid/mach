{
  "type": "module",
  "scripts": {
    "fmt": "npx prettier ./**/*.js -w --ignore-path=.prettierignore && rm -rf node_modules",
    "parcel": "npx parcel build --no-cache",
    "webpack": "npx webpack build --config webpack.config.js"
  },
  "targets": {
    "default": {
      "source": ["./a.js"],
      "distDir": "./dist-parcel",
      "outputFormat": "esmodule",
      "optimize": false,
      "sourceMap": false,
      "scopeHoist": false
    }
  }
}
